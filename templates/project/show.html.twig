{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1 class="formtitle">Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Decription</th>
                <td>{{ project.decription }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ project.creationDate ? project.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ project.startedAt ? project.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndedAt</th>
                <td>{{ project.endedAt ? project.endedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ project.place }}</td>
            </tr>
            <tr>
                <th>FrontPage</th>
                <td>{{ project.frontPage ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                <td><img src="{{ asset('uploads/illustration/'~project.illustration) }}"></td>
            </tr>
        </tbody>
    </table>

    <section class="center">
      <a href="{{ path('project_index') }}" class="liens">back to list</a>
      <a href="{{ path('project_edit', {'id': project.id}) }}" class="liens">edit</a>

      {{ include('project/_delete_form.html.twig') }}
    </section>

{% endblock %}
